{
    "name": "react-primer",
    "version": "0.1.0",
    "description": "http://primercss.io components for React",
    "author": "Julio Mu√±oz <jmgaya.dev@gmail.com>",
    "scripts": {
        "lint": "eslint ./src",
        "test":
            "nyc --reporter=lcov --reporter=text ava --verbose test/test.js",
        "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
        "report": "nyc report --reporter=html && opn coverage/index.html",
        "clean": "rimraf dist coverage .nyc_output",
        "watch-css":
            "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "watch-storybook": "start-storybook -p 9009 -s src",
        "storybook": "npm-run-all --parallel watch-css watch-storybook",
        "start": "npm run storybook",
        "deploy-storybook": "storybook-to-ghpages",
        "build-css":
            "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
        "build": "babel src --out-dir dist --copy-files --ignore '**/*.scss'",
        "prepublish": "npm run lint && npm run build-css && npm run build"
    },
    "devDependencies": {
        "@storybook/addon-actions": "^3.2.18",
        "@storybook/addon-links": "^3.2.18",
        "@storybook/react": "^3.2.18",
        "@storybook/storybook-deployer": "^2.2.0",
        "ava": "^0.24.0",
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "coveralls": "^3.0.0",
        "eslint": "^4.13.1",
        "eslint-plugin-react": "^7.5.1",
        "node-sass-chokidar": "^0.0.3",
        "npm-run-all": "^4.1.2",
        "nyc": "^11.4.1",
        "octicons": "^7.0.1",
        "opn-cli": "^3.1.0",
        "primer": "^10.1.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "rimraf": "^2.6.2"
    },
    "publishConfig": {
        "repository": "https://registry.npmjs.org"
    },
    "ava": {
        "require": ["babel-register"],
        "babel": "inherit"
    },
    "license": "MIT",
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jmgaya/react-primercss.git"
    },
    "bugs": {
        "url": "https://github.com/jmgaya/react-primercss/issues"
    },
    "homepage": "https://github.com/jmgaya/react-primercss#readme"
}
